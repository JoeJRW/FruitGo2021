<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="#00ffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_main_layout"
            android:elevation="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="FruitGo"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_introduction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_layout"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Let's FruitGo"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#03DAC6"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/tv_introduction_title"/>

    <RelativeLayout
        android:id="@+id/layout_introduction_mission"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tv_introduction_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_todo_intro_layout_pressed"
        android:padding="10dp"
        android:elevation="8dp">
        <TextView
            android:id="@+id/tv_intro_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自律伴你 番茄钟"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/iv_intro_mission"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right"
            android:gravity="center"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_introduction_farm"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/layout_introduction_mission"
        android:layout_margin="10dp"
        android:background="@drawable/selector_farm_intro_layout_pressed"
        android:padding="10dp"
        android:elevation="8dp">
        <TextView
            android:id="@+id/tv_intro_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一起多运动 农场多收获"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/iv_intro_farm"            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right"
            android:gravity="center"
            android:layout_marginRight="5dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_introduction_store"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/layout_introduction_farm"
        android:layout_margin="10dp"
        android:background="@drawable/selector_store_intro_layout_pressed"
        android:padding="10dp"
        android:elevation="8dp">
        <TextView
            android:id="@+id/tv_intro_store"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="快来商城买买买"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/iv_intro_store"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/icon_right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>

</RelativeLayout>